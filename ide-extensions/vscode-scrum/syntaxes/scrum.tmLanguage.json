{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SCRUM",
  "scopeName": "source.scrum",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#api-definitions" },
    { "include": "#story-definitions" },
    { "include": "#control-structures" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.scrum",
          "begin": "--(?!\\[\\[)",
          "end": "$"
        },
        {
          "name": "comment.block.scrum",
          "begin": "--\\[\\[",
          "end": "\\]\\]"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.directive.scrum",
          "match": "\\b(#SPRINTGOAL|#REVIEW|#IMPEDIMENT|#RETROSPECTIVE|#BACKLOG)\\b"
        }
      ]
    },
    "api-definitions": {
      "patterns": [
        {
          "name": "keyword.control.api.scrum",
          "match": "\\b(I WANT TO DEFINE API|I WANT TO DEFINE ENDPOINT|END OF API|END OF ENDPOINT|BASE IS|METHOD IS|PATH IS|QUERY_PARAMS ARE|RETURNS IS)\\b"
        }
      ]
    },
    "story-definitions": {
      "patterns": [
        {
          "name": "keyword.control.story.scrum",
          "match": "\\b(USER STORY|END OF STORY|USING|RETURN ANSWER)\\b"
        }
      ]
    },
    "control-structures": {
      "patterns": [
        {
          "name": "keyword.control.conditional.scrum",
          "match": "\\b(IF|ELSEIF|ELSE|ENDIF)\\b"
        },
        {
          "name": "keyword.control.loop.scrum",
          "match": "\\b(WHILE|ENDWHILE|FOR|ENDFOR|BREAK|CONTINUE)\\b"
        },
        {
          "name": "keyword.control.sprint.scrum",
          "match": "\\b(SPRINT|ENDSPRINT|STORY|TASK|DELIVER|IMPEDIMENT)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.other.scrum",
          "match": "\\b(IS|ARE|SAY|ASK|RETURN|CALL|WITH|AND|OR|NOT|TRUE|FALSE|NULL)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.scrum",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.scrum",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.logical.scrum",
          "match": "\\b(AND|OR|NOT)\\b"
        },
        {
          "name": "keyword.operator.assignment.scrum",
          "match": "\\bIS\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.scrum",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.scrum",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.scrum",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.scrum",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
